@model OnlyFriends.Models.Post

<h2>@ViewBag.Curr</h2>
<h2>Adaugare postare</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Posts"))
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Title", "Titlu post")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
    <br />
    <br />

 

    <button class="btn btn-sm btn-success" type="submit">Adauga postare</button>
}
