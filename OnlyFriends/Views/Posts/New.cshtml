@model OnlyFriends.Models.Post

<h2>Add a new post</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Posts"))
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Title", "Title")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Content:")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success block" type="submit">Add post</button>
    @Html.ActionLink("Back to posts", "Index", new { controller = "Posts" }, new { @class = "btn btn-warning block" })
}
