@model OnlyFriends.Models.Post




<div class="card">
    <h2>Add a new post!</h2>
    @using (Html.BeginForm(actionName: "New", controllerName: "Posts"))
    {

<div class="form">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <strong> @Html.Label("Title", "Group Title")</strong>
    <br />
    @Html.TextBox("Title", Model.Title, new { @class = "form__input " })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />
    <br />
    <strong>@Html.Label("Content", "Group description:")</strong>
    <br />
    @Html.TextArea("Content", Model.Content, new { @class = "form__input" })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br />
    @{
        TempData["action"] = "Index";
        TempData["controller"] = "Posts";
        TempData["id"] = null;
    }
    <br />
    @Html.HiddenFor(m => m.Date)


        <button type="submit" class="btn btn-success block">Add group</button>
    <br />
</div>
    }
    <br/>
    @Html.ActionLink("Back to posts", "Index", new { controller = "Posts" }, new { @class = "btn btn-warning block" })

</div>