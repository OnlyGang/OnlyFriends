@model OnlyFriends.Models.Post

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    

    @Html.Label("Title", "Titlu post")
    <br />
    @Html.EditorFor(m => m.Title, new { @class = "form-control" })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Content", "Continut Post")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />
    @Html.HiddenFor(m => m.Date)
    
    <button class="btn btn-sm btn-success" type="submit">Modifica post</button>

}
